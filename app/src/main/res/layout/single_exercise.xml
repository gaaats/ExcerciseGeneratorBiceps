<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/main_colour_"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:layout_width="70dp"
        android:id="@+id/img_picture"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:src="@drawable/muscule_image"
        android:layout_height="70dp"
        app:layout_constraintEnd_toStartOf="@id/tv_ex_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="90dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toEndOf="@id/img_picture"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tv_ex_name"
        app:layout_constraintEnd_toStartOf="@id/tv_ex_equipment"
        android:layout_marginStart="10dp"
        android:gravity="center"
        tools:text="title"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/img_picture"/>

    <TextView
        android:layout_width="90dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toEndOf="@id/tv_ex_name"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tv_ex_equipment"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:gravity="center"
        tools:text="equipment"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/img_picture"/>
    

</androidx.constraintlayout.widget.ConstraintLayout>